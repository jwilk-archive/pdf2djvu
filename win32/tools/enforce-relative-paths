use strict;
use warnings;

use Cwd qw(getcwd realpath);
use File::Spec qw();
use FindBin qw();

my $here = $FindBin::Bin;
my $root = realpath("$here/..");

sub relativize
{
    my ($path) = @_;
    if ($path =~ m{\A\Q$root\E/}) {
        $path = File::Spec->abs2rel($path)
    }
    return $path;
}

my @argv = map { relativize($_); } @ARGV;
exec { $argv[0] } @argv or die;

